{
  "compilerOptions": {
    "target": "ES6",                   // Set the ECMAScript target version
    "module": "ES6",              // Set the module code generation method (use "commonjs" for Node.js projects)
    "outDir": "./dist",                // Redirect output structure to the directory
    "rootDir": "./src",                // Specify the root directory of input files
    "strict": true,                    // Enable all strict type-checking options
    "esModuleInterop": true,           // Enable compatibility with CommonJS and ES Modules
    "skipLibCheck": true,              // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true // Ensure that casing is consistent in imports
  },
  "include": [
    "src/**/*"  // Include all JavaScript files in the "src" directory
  ],
  "exclude": [
    "dist"          // Exclude the "dist" directory
  ]
}
